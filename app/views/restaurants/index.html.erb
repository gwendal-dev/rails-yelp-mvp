<h1>Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%=restaurant.name%> - <%= restaurant.category %></h2>
  <%= link_to 'New review', new_restaurant_review_path(restaurant) %>
  <p><%= link_to "Delete",
            restaurant_path(restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %></p>
<% end %>
<%= link_to 'New restaurant', new_restaurant_path, class: 'btn btn-primary' %>
